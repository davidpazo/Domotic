<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#32f8fc">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<SeekBar
           android:layout_width="260dp"
           android:layout_height="30dp"
           android:layout_marginLeft="40dp"
           android:onClick="cambiarToast"
          />-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Intensidad de luz"
            android:textSize="18dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:id="@+id/onoff"
            android:layout_marginLeft="80dp"
            android:onClick="Luz"
            android:text="@string/off" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/Vibracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Vibracion"
            android:text="Vibracion" />

        <Button
            android:id="@+id/Linterna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Flash"
            android:text="linterna" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/callField"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:hint="Nº telefono" />

        <Button
            android:id="@+id/btCall"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:onClick="llama"
            android:text="LLAMAR" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/navegador"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:hint="Pagina web" />

        <Button
            android:id="@+id/btnav"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:onClick="navegador"
            android:text="Navegador"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/localizacion"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:hint="Localización" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maps"
            android:id="@+id/btmaps"
            android:onClick="mapas"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar texto"
            android:id="@+id/etexto"
            android:layout_column="0"
            android:onClick="sendMessage"
            />
        <EditText
            android:id="@+id/texto"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:hint="Introduce texto" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escribir texto"
            android:id="@+id/etexto1"
            android:layout_column="0"
            android:onClick="forResult"/>
        <EditText
            android:id="@+id/texto1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:hint="Esperando texto" />
    </TableRow>


</TableLayout>